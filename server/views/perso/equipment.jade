mixin equipmentSimple(equipmentList)
    ul.list-unstyled
        li.col-xs-12(data-ng-repeat="equipment in "+equipmentList)
            div.form-group
                label.col-xs-3 #{t('character.equipments.name')}
                div.col-xs-7
                    input.form-control(type="text",data-ng-model="equipment.name",id="equipment-name-{{$index}}")
                +removeButton(equipmentList,"equipment")
            div.form-group
                label.col-xs-3 #{t('character.equipments.position')}
                div.col-xs-9
                    +position("equipment.position")
            section
                h3 #{t('character.powers.title')}
                +equipmentPowerSimple("equipment.powers")
            if block
                block
            div.form-group
                textarea.form-control(data-ng-model="equipment.text",id="equipment-text-{{$index}}")
    button.btn.btn-success(type="button",data-ng-click="addElementToList("+equipmentList+",createEquipment)",id="equipmentAdd")
        span.glyphicon.glyphicon-plus

mixin equipmentPowerSimple(powerList)
    ul.list-unstyled
        li.col-xs-12(data-ng-repeat="power in "+powerList)
            div.form-group
                label.col-xs-3 #{t('character.powers.name')}
                div.col-xs-7
                    input.form-control(type="text",data-ng-model="power.name")
                +removeButton(powerList,"power")
            div.form-group
                label.col-xs-3 #{t('character.powers.type')}
                div.col-xs-9
                    +powerType(model)
            if block
                block
            div.form-group
                textarea.form-control(data-ng-model="power.text")
    button.btn.btn-success(type="button",data-ng-click="addElementToList("+powerList+")")
        span.glyphicon.glyphicon-plus

+section("equipments")
    +equipmentSimple("character.equipments")
